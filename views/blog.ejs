<!DOCTYPE html>
<html lang="en">

<head>
  <title>Blog</title>
  <%- include('./partials/head') %>
</head>

<body>
  <%- include('./partials/nav') %>
    <div class="container mt-4 mb-2 ">
      <h1>
        <%= blog.title %>
      </h1>
      <img src="<%= blog.coverImageURL %>" width="400px">
      <div style="white-space: pre-wrap; word-wrap: break-word;">
        <%= blog.body %>
      </div>

    </div>
    <div class="container mt-4 mb-2 ">
      <% if (blog.createdBy) { %>
        <img src="<%= blog.createdBy.profileImageURL %>" alt="Author Image">
        <h3>Author: <%= blog.createdBy.fullName %>
        </h3>
        <% } else { %>
          <h3>Author: Unknown</h3>
          <% } %>
    </div>
    <div class="container mt-3">
      <h1>Comments</h1>

      <% if (  ) { %>
       
      <% } %>
      <form action="/comment/<%= blog._id %>" method="post">
        <div class="mb-3">
          <input type="text" name="content" class="form-control" placeholder="Enter your comment" />
          <button class="btn btn-sm btn-primary mt-3" type="submit">Submit</button>
        </div>
      </form>
    </div>



    <%- include('./partials/scriptes') %>

</body>

</html>